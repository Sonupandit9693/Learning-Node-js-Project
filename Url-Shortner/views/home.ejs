<!DOCTYPE html>
<html lang="en">
  <head>
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        padding-left: 10%;
      }
      p{
        font-size: medium;
      }
     
      th{
        background-color: rgb(216, 212, 206);
        padding: 10px;
        margin: 10px;
      }
      table{
        border: 2px solid rgb(20, 20, 20);
        width: 80%;
      }
      .url-details{
        margin-top: 20px;
        font-size: 20px
      }
      label{
        font-size: 20px;
        font-style: italic;
      }
      input{
        width: 300px;
        height: 30px;
      }
      button{
        height: 35px;
      }
      td{
        padding-left: 30px;
      }
      p{
        font-size: 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      }
      h1{
        display: block;
        align-items: center;
      }

    </style>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Url_Shortner</title>
    <!-- <link rel="stylesheet" href="./style.css"> -->
  </head>
  <body>
    <h1>URL Shortner</h1>
    <% if(locals?.id) {%>
    <p><b>URL Genrated :</b> http://localhost:8000/url/<%= id %></p>
    <% } %>
    <div>
      <form method="POST" action="/url">
        <div class="search-bar flex">
          <label><b>Enter your orignal Url :</b></label>
          <input type="text" name="url" id="search-text" class="news-input" placeholder="https://example.com">
          <button id="search-button" class="search-button" type="submit">Genrate</button>
      </div>
        <!-- 
        <input type="text" name="url" placeholder="https://example.com" />
        <button type="submit">Genrate</button> -->
      </form>
    </div>
    <div class="url-details">
        <% if (locals.urls) { %>
         <table>
            <thead >
                <th>Sr.No</th>
                <th>ShortUrl</th>
                <th>RedirectUrl</th>
                <th>Total Clicks</th>
            </thead>
            <tbody>
                <% urls.forEach((url, index) => { %>
                    <tr>
                        <td><%= index + 1  %></td>
                        <td><%= url.shortId %></td>
                        <td><%= url.redirectURL %></td>
                        <td><%= url.visitHistory.length %></td>
                    </tr>
                <% }) %>
            </tbody>
         </table>
        <% } %>
    </div>
  </body>
</html>
